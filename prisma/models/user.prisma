model User {
    id        Int        @id @default(autoincrement())
    name      String     @default("")
    email     String     @unique
    password  String
    createdAt DateTime   @default(now())
    verify    Boolean    @default(false)
    roles     UserRole[]
    bill      Bill[]

    @@index([email, verify]) //Danh index de tang toc do truy cap 
    @@index([email])
}
